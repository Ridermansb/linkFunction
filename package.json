{
  "name": "@ridermansb/linkvalue",
  "amdName": "linkState",
  "version": "0.0.5",
  "description": "Link input value into functions",
  "main": "dist/linkvalue.js",
  "module": "dist/linkvalue.es.js",
  "jsnext:main": "dist/linkvalue.es.js",
  "umd:main": "dist/linkvalue.umd.js",
  "source": "src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build": "microbundle --name linkState",
    "dev": "microbundle watch",
    "size": "size-limit",
    "prebuild": "rimraf dist",
    "postbuild": "npm run size",
    "prepublish": "npm run -s build",
    "release": "npm run build -s && git tag $npm_package_version && git push --tags && npm publish"
  },
  "author": "Riderman de Sousa Barbosa <ridermansb@gmail.com>",
  "bugs": {
    "url": "https://github.com/ridermansb/linkvalue/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ridermansb/linkvalue"
  },
  "license": "MIT",
  "dependencies": {
    "dlv": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-jest": "^24.5.0",
    "jest": "^24.5.0",
    "microbundle": "^0.11.0",
    "size-limit": "^0.21.1"
  },
  "size-limit": [
    {
      "path": "./dist/linkvalue.js",
      "webpack": false,
      "limit": "230 B"
    }
  ],
  "browser": {
    "./index.js": "./dist/index.umd.js"
  }
}
